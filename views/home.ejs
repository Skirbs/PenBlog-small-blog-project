<%- include("include/head.ejs") %>
<link rel="stylesheet" href="/css/views css/home.css">  
</head>
  <body>
    <%- include("include/navigation") %>
    <main class="col-11 mt-2 d-flex flex-column align-items-center">
      <h1 class="col-12">Your Blogs</h1>
      <div class="blogs-container col-12 d-flex flex-column align-items-center">
        <% if(blogTitles.length === 0){ %>
          <h2>You have no blogs</h2>
        <% } else for(let i = 0; i < blogTitles.length; i++) { %>
          <div class="blog-content col-11 p-2">
            <h2 class="col-12 pb-2"><%= blogTitles[i] %></h2>
            <p class="col-12"><%= shortendBlogDesc[i]%>  <a href="/blog/<%=blogID[i]%>">Read more</a> </p>
          </div>
        <% } %>
      </div>
    </main>
    
  </body>
</html>
